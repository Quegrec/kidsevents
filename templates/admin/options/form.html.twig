{% extends 'base.html.twig' %}

{% block stylesheets %}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="{{asset('css/Admin/style.css')}}">
{% endblock %}

{% block body %}
	<body class='bodyImg' style="background: linear-gradient(90deg,rgba(0,0,255,9),rgba(255,0,0,5));">
	<a href="{{ url('admin.options.index') }}" class="retour">Retour</a>
	<div class="text-box">
		<div class="row">
			<div class="col">
				<h1>Gérer l'Option</h1>
				{# 
					form : variable envoyée par le contrôleur
					<form novalidate="novalidate"
				#}
				{{ form_start(form, { attr : { 'novalidate' : 'novalidate' } }) }}
					<p>
						{{ form_label(form.intitule, 'appelation :') }} </br>
						{{ form_widget(form.intitule) }}
						{{ form_errors(form.intitule) }}
					</p>
					<p>
						{{ form_label(form.descriptif, 'comment décrire :') }} </br>
						{{ form_widget(form.descriptif) }}
						{{ form_errors(form.descriptif) }}
					</p>
					<p>
						{{ form_label(form.prix, 'coût (en €) :') }} </br>
						{{ form_widget(form.prix) }}
						{{ form_errors(form.prix) }}
					</p>
						<input type="submit" class="btn btn-primary" >
				{{ form_end(form) }}
			</div>
		</div>
	</div>
{% endblock %}