{% extends 'base.html.twig' %}

{% block stylesheets %}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="{{asset('css/Admin/style.css')}}">
{% endblock %}

{% block body %}
	<body class='bodyImg'>
	<a href="{{ url('admin.themes.index') }}" class="retour">Retour</a>
	<div class="text-box">
		<div class="row">
			<div class="col">
				<h1>Gérer le Theme</h1>
				{# 
					form : variable envoyée par le contrôleur
					<form novalidate="novalidate"
				#}
				{{ form_start(form, { attr : { 'novalidate' : 'novalidate' } }) }}
					<p>
						{{ form_label(form.intitule, 'appelation :') }} </br>
						{{ form_widget(form.intitule) }}
						{{ form_errors(form.intitule) }}
					</p>
					<p>
						{{ form_label(form.descriptif, 'comment décrire :') }} </br>
						{{ form_widget(form.descriptif) }}
						{{ form_errors(form.descriptif) }}
					</p>
					<p>
						{{ form_label(form.duree, 'durée (en h) :') }} </br>
						{{ form_widget(form.duree) }}
						{{ form_errors(form.duree) }}
					</p>
					<p>
						{{ form_label(form.prix, 'coût (en €) :') }} </br>
						{{ form_widget(form.prix) }}
						{{ form_errors(form.prix) }}
					</p>
					<p>
						{{ form_label(form.age_min, 'age minimal des enfants acceptés :') }} </br>
						{{ form_widget(form.age_min) }}
						{{ form_errors(form.age_min) }}
					</p>
					<p>
						{{ form_label(form.age_max, 'age maximal des enfants acceptés :') }} </br>
						{{ form_widget(form.age_max) }}
						{{ form_errors(form.age_max) }}
					</p>
					<p>
						{{ form_label(form.nbenfant_min, "nb minimal d'enfants acceptés :") }} </br>
						{{ form_widget(form.nbenfant_min) }}
						{{ form_errors(form.nbenfant_min) }}
					</p>
					<p>
						{{ form_label(form.nbenfant_max, "nb maximal d'enfants acceptés :") }} </br>
						{{ form_widget(form.nbenfant_max) }}
						{{ form_errors(form.nbenfant_max) }}
					</p>
					<p>
						{{ form_label(form.image, "nom de l'image :") }}
						{{ form_widget(form.image) }}
						{{ form_errors(form.image) }}
					</p>
					<p>
						<input type="submit" class="btn btn-info" href="{{ url('admin.themes.index') }}">
					</p>
				{{ form_end(form) }}
			</div>
		</div>
	</div>
{% endblock %}